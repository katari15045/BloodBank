<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sakethkatari.bloodbank">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.SEND_SMS"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Startup">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".Signup"/>
        <activity android:name=".MobileVerifier"/>
        <activity android:name=".EmailVerifier"/>
        <activity android:name=".Login"/>
        <activity android:name=".HomeDonor"/>
        <activity android:name=".HomeRecipient"/>
        <activity android:name=".Profile"/>
        <activity android:name=".DonorFinderActivity"/>
        <activity android:name=".ResultDisplayer"/>

    </application>

</manifest>